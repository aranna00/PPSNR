# Copy this file to .env and fill in real values before running `docker compose up`.
# Do NOT commit your real secrets.

# Twitch OAuth credentials (leave blank to disable Twitch external login)
TWITCH_CLIENT_ID=
TWITCH_CLIENT_SECRET=

# Allow forwarded headers in dev behind proxies (optional)
FORWARDEDHEADERS__ALLOWALL=TRUE

# Base URL used when constructing absolute links in outbound emails
# If not set, the server will infer from the current request
PUBLIC_BASE_URL=http://localhost:5000

# Email (SMTP) settings for EmailService
# Hostname of your SMTP server (required)
EMAIL_HOST=
# Port for SMTP server (commonly 587 for STARTTLS, 465 for SMTPS, or 25)
EMAIL_PORT=587
# Optional username/password for authenticated SMTP
EMAIL_USERNAME=
EMAIL_PASSWORD=
# From address and optional display name (required From)
EMAIL_FROM=
EMAIL_FROM_NAME=PPSNR
# Enable SSL/TLS for SMTP connection (true/false or 1/0)
EMAIL_ENABLE_SSL=true



