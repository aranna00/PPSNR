# Copy this file to .env and fill in real values before running `docker compose up`.
# Do NOT commit your real secrets.

# Twitch OAuth credentials (leave blank to disable Twitch external login)
TWITCH_CLIENT_ID=
TWITCH_CLIENT_SECRET=

# Database connection: for local development you can use the default sqlite file under /data
# Example: ConnectionStrings__DefaultConnection=Data Source=/data/ppsnr.db
ConnectionStrings__DefaultConnection=Data Source=/data/ppsnr.db

# Disable HTTPS redirection inside the container when running behind a reverse-proxy
# (default true in the current docker-compose)
DisableHttpsRedirection=true

